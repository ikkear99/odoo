<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record model="ir.rule" id="per_user_rule">
    <field name="name">User: see the individual Record</field>
    <field name="model_id" ref="model_user_information"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
    <field name="domain_force">['|',('create_uid','=',False),('create_uid','=',user.id)]</field>
    <field name="groups" eval="[(4,ref('base.group_user'))]"/>
</record>

</odoo>
