<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">departments.tree</field>
        <field name="model">departments</field>
        <field name="arch" type="xml">
            <tree string="Companies" sample="1">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_department_form" model="ir.ui.view">
        <field name="name">departments.form</field>
        <field name="model">departments</field>
        <field name="arch" type="xml">
            <form string="department">
                <field name="company_id" invisible="1"/>
                <sheet>
                    <field name="active" invisible="1"/>
                    <group col="4">
                        <field name="name"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>



    <record id="departments_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">departments</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('departments.group_admin'))]"/>
    </record>
    
    <menuitem id="menu_departements_root"
              name="Departments"
              action="departments_action"
              sequence="10"/>
</odoo>